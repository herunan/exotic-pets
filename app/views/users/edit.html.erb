<div class="container">
  <div class="d-flex justify-content-center">
    <h1> Edit your info</h1>
  </div>
  <div class="d-flex justify-content-center">
      <%= simple_form_for @user do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :phone_number %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="title m-3">
      <h1> New Pets</h1>
    </div>
    <div class="col-12 col-lg-12">
      <div class="cards-browse">

        <% @pets.each do |pet| %>
          <%= link_to pet_path(pet) do %>
            <div class="card-pet">
              <div class="card-pet-image">
                <img src=<%= cl_image_path pet.photos.first.key, height: 200, crop: :fill if pet.photos.attached? %> />
                <h2 class="card-pet-rating">
                  <% pet.average_rating.to_i.times do %>
                    <i class="fas fa-star"></i>
                  <% end %>
                </h2>
                <h2 class="card-pet-species" ><%= pet.species.capitalize %></h2>
              </div>
              <div class="card-pet-infos">
                <div>
                  <h2 class="card-pet-name"><%= pet.name %></h2>
                  <p><%= pet.description.truncate(60, separator: /\s/) %></p>
                </div>
                <h2 class="card-pet-price">Â£<%= pet.price %>0/day</h2>
                <img class="card-pet-user avatar avatar-bordered" src=<%= cl_image_path pet.user.photo.key, width: 40, height: 40, crop: :thumb, gravity: :face if pet.user.photo.attached? %> />
              </div>
            </div>
          <% end %>
        <% end %>
        <br>
      </div>
      <%= link_to "List your pet", new_pet_path(@pet), class: "btn btn-create" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-12">

      <h1>Edit your exotic pet</h1>

      <%= simple_form_for @pet do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :species %>
        <%= f.submit "Save changes", class: "btn btn-create" %>
      <% end %>

    </div>
  </div>
</div>


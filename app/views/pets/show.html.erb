<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-8">

      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <% @pet.photos.each_with_index do |_, index| %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<%= 'active' if index == 0 %>"></li>
          <% end %>
        </ol>
        <div class="carousel-inner">
          <% @pet.photos.each_with_index do |photo, index|  %>
            <div class="carousel-item <%= 'active' if index == 0 %>">
              <%= image_tag photo, width: 1000, crop: :fit, class: "d-block w-100" %>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
  </div>

  <div id="pet-show" class="container">
    <div class="row justify-content-between">
      <div id="method" class="col-12 col-md-6">
        <h2><%= @pet.name %></h2>
        <%= simple_format @pet.description %>
        <%= link_to '<i class="fa fa-arrow-left"></i> Back to listings'.html_safe, root_path, class: "link" %>
      </div>
      <div id="booking-form" class="col-12 col-md-4">
        <h2>Borrow</h2>
        <% if @booking.pet == @pet && @booking.user == current_user %>
          <p>Thanks for your borrow request for the @pet.species @pet.name!</p>
        <% else %>
          <%= render 'bookings/form', pet: @pet, booking: @booking %>
        <% end %>
      </div>
    </div>
  </div>
  <div id="reviews" class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-12 col-md-6">
        <h2>Did you try this <%= @cocktail.name %>? <strong>Review it!</strong></h2>
        <% if @booking.reviews.blank? %>
          <p id="no-review">Be the first to leave a review for the <%= @cocktail.name %></p>
        <% else %>
          <% @booking.reviews.each do |review| %>
            <%= render 'bookings/review_show', review: review %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>







  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">


        <div class="d-inline-flex p-2">
          <h1><%= @pet.name%></h1>
          <div class="ml-4">
            <img class="avatar-bordered" src=<%= cl_image_path @pet.user.photo.key, width: 40, height: 40, crop: :thumb, gravity: :face if @pet.user.photo.attached? %> />
          </div>
        </div>
        <div class="p-2">
          <h2><%= @pet.address %></h2>
          <h2><%= @pet.species %></h2>
        </div>
      <%= link_to "Borrow pet", new_pet_booking_path(@pet), class: "btn btn-create" %>
      <%= link_to "Edit pet", edit_pet_path(@pet), class: "btn btn-edit" %>
      <%= link_to "Remove pet", pet_path(@pet), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-delete"%>
    </div>
  </div>
</div>


